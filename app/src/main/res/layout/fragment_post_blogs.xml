<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PostBlogsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Post Blogs Here"
            android:textSize="22sp"
            android:textColor="@color/maroon"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Blog Title"
            app:hintTextColor="@color/maroon"
            app:helperTextEnabled="true"
            app:boxBackgroundMode="outline"
            app:helperText="Blog Title"
            app:helperTextTextColor="@color/maroon"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginTop="20dp"
            android:padding="8dp"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/blog_title"
                android:textColor="@color/maroon"
                android:drawableLeft="@drawable/title"
                android:drawablePadding="10dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Blog Message"
            app:hintTextColor="@color/maroon"
            app:helperTextEnabled="true"
            app:boxBackgroundMode="outline"
            app:helperText="Blog Message"
            app:helperTextTextColor="@color/maroon"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginTop="20dp"
            android:padding="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/blog_message"
                android:textColor="@color/maroon"
                android:drawableLeft="@drawable/message"
                android:drawablePadding="10dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/blog_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/upload"
            android:scaleType="fitCenter"
            />

        <Button
            android:id="@+id/blog_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="@color/maroon"
            android:text="Submit" />

    </LinearLayout>

</ScrollView>
